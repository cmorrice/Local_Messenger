<Application x:Class="Local_Messenger.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Local_Messenger"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <!-- This will let use use our themes for xaml items -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes\ChatListTheme.xaml"/>
                <ResourceDictionary Source="Themes\ButtonTheme.xaml"/>
                <ResourceDictionary Source="Themes\CloseButtonTheme.xaml"/>
                <ResourceDictionary Source="Themes\ContextMenuTheme.xaml"/>
                <ResourceDictionary Source="Themes\MenuItemTheme.xaml"/>
                <ResourceDictionary Source="Themes\MenuItemTopTheme.xaml"/>
                <ResourceDictionary Source="Themes\MenuItemBottomTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
